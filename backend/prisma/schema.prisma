// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(cuid()) // Using cuid for unique IDs
  title       String
  description String? // Optional field
  status      String   // e.g., "idea", "started", "paused", "finished", "abandoned"
  githubUrl   String?
  deployedUrl String?
  docsUrl     String?
  hardwareInfo Json?    // Store hardware list as JSON [{name: string, link?: string}]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}